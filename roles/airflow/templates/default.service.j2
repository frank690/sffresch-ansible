[Unit]
Description=Airflow {{ service }} daemon
After=network.target mysql.service
Wants=mysql.service

[Service]
EnvironmentFile=/etc/environment
User=root
Group=root
Type=simple
ExecStart=/usr/local/bin/airflow {{ service }}
Restart=on-failure
RestartSec=1min
StandardOutput=file:/var/log/airflow-{{ service }}/output.log
StandardError=file:/var/log/airflow-{{ service }}/error.log

[Install]
WantedBy=multi-user.target